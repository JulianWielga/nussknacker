@import "./_variables.styl"

// Accordion styles
// overwriting default styles of the component
.panel-default, .panel-heading
  background-color: panelHeaderBkgColor !important
  border: none !important
  border-radius: 0 !important
.panel-heading
  cursor: pointer
  height: panelHeaderHeight
  padding: 0 !important
  .panel-title
    color: panelTitleTextColor
    font-size: panelHeaderFontSize
  a
    padding 5px 0 0 buttonPadding
    text-decoration: none !important
    display: block
    width: 100%
    height: 100%

.panel-process-info
  background-color: #4D4D4D
  display flex
  padding: 10px 7px 10px 22px
  .process-info-icon
    display inline-block
    align-self center
    width 32px
    height 32px
    filter drop-shadow(0 0 2px #000) brightness(1.5)
  .process-info-text
    display inline-block
    margin-left 7px
    font-size: 14px
    font-weight: bold
    color: #b3b3b3
    vertical-align middle
    .process-name
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 215px;
      white-space: pre;
    .process-info-description
      font-size: 12px
      font-weight: lighter

.panel-properties
  padding: 0 0 0 buttonPadding
  margin-top 7px
  margin-bottom 7px
  .business-switch-text
    padding-left: 5px
    font-weight: lighter
    vertical-align bottom
    cursor pointer

.panel-body
  padding: 0 0 0 buttonPadding !important
  background-color: panelBkgColor
  border: none !important

  hr
    border-top 1px solid hrColor
    margin-top 10px
    margin-bottom 10px

.panel
  margin-bottom: 0 !important
  box-shadow: none !important
.panel + .panel
  margin-top: 0 !important

.panel-comment
  margin-top 1px
  font-size 12px
  word-break break-word
  p
    width: 90%
    margin-left: 0
    margin-right: 0

.sideNodeDetails
  padding: 0 buttonPadding 0 0 !important
  .node-label
    display: block
    font-weight: bold
    margin-bottom: 5px
    text-transform capitalize
  .node-key
    display: inline
    font-style: italic
    text-transform capitalize
  .node-value
    display: inline
    word-wrap: break-word
  button
    margin-top 10px

.dropZone
  cursor: pointer
  height: 33
  //TODO: can it be done automatically?
  padding-top 6
  margin-bottom 5
  div
    text-align center

.thumbVertical
  background-color scrollbarColor

.floating
  position: fixed
  top: menuBarHeight
  transition left 0.5s ease, right 0.5s ease
  z-index: 100
  padding-top 10px

  &.right
    right: 0

  &.is-opened
    right: sidebarWidth

  &.left
    left: 0
    &.is-opened
      left: sidebarWidth

.zoom-in-out
  @extend .floating
  padding-right 10px
  padding-top 8px
  display inline-flex

.zoom
    cursor: pointer
    margin-left 2px
